---
import HeaderMenu from '../components/header/HeaderMenu.astro'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html
  lang="ca"
  class="bg-josa-light dark:bg-josa-dark text-josa-dark dark:text-josa-light scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web de Josa agència de communicació" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-josa">
    <HeaderMenu />
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Montserrat';
    src: url('/Montserrat.ttf');
  }

  .avatar {
    mask-image: linear-gradient(black 60%, grey, transparent);
  }

  html {
    cursor: url('/cursor.svg'), auto;
  }
</style>
