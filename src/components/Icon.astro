---
const { name } = Astro.props

import Chess from './icons/Chess.astro'
import ChevronsDown from './icons/ChevronsDown.astro'
import Desktop from './icons/Desktop.astro'
import Github from './icons/Github.astro'
import Instagram from './icons/Instagram.astro'
import Josa from './icons/Josa.astro'
import Linkedin from './icons/Linkedin.astro'
import Menu from './icons/Menu.astro'
import Palette from './icons/Palette.astro'
import Twitter from './icons/Twitter.astro'

const iconMap = {
  chess: Chess,
  chevronsDown: ChevronsDown,
  desktop: Desktop,
  github: Github,
  instagram: Instagram,
  josa: Josa,
  linkedin: Linkedin,
  menu: Menu,
  palette: Palette,
  twitter: Twitter,
}

const IconComponent = iconMap[name]
---

<IconComponent />
