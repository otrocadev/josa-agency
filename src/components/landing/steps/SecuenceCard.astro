---
const { cardTitle, cardDescription, number } = Astro.props;

const newNumber = number + 1;
---

<li
  class="relative ms-12 p-6 mt-12 bg-josa-dark-green text-josa-light shadow-2xl flex flex-col rounded-xl gap-4 max-w-60 md:max-w-96 2xl:max-w-1/2"
>
  <span
    class="absolute bg-josa-green text-josa-light dark:text-josa-light -top-12 -left-20 flex items-center justify-center p-3 rounded-full w-14 h-14"
  >
    <p class="text-2xl font-extrabold">{newNumber}</p>
  </span>
  <span class="flex flex-col gap-2">
    <h3 class="font-medium leading-tight">
      <strong>
        {cardTitle}
      </strong>
    </h3>
    <p class="text-sm">{cardDescription}</p>
  </span>
</li>
